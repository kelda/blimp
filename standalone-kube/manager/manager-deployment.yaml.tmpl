apiVersion: apps/v1
kind: Deployment
metadata:
  name: manager
  namespace: manager
spec:
  selector:
    matchLabels:
      service: manager
  template:
    metadata:
      labels:
        service: manager
    spec:
      containers:
      - name: manager
        image: "<CLUSTER_MANAGER_IMAGE>"
        imagePullPolicy: Always
        command:
        - blimp-cluster-controller
        - -tls-cert
        - /etc/blimp/cert.pem
        - -tls-key
        - /etc/blimp/key.pem
        env:
        - name: BLIMP_DOCKER_REPO
          value: "<DOCKER_REPO>"
        - name: BLIMP_REGISTRY_HOSTNAME
          value: "<REGISTRY_HOSTNAME>"
        # You can change this value based on the size of your cluster.
        - name: MAX_SANDBOXES
          value: "500"
        volumeMounts:
        - name: certs
          mountPath: "/etc/blimp"
          readOnly: true
      volumes:
      - name: certs
        secret:
          secretName: manager-certs
      serviceAccountName: manager-admin
